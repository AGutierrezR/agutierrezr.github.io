---
import { Icon } from 'astro-icon'
import navItems from '../_data/nav'
import Link from './Link.astro'

const currentPath = Astro.url.pathname
---

<header role="banner" class="site-header wrapper">
  <div class="repel">
    <a class="site-header__brand" href="/" aria-label="Andres Gutierrez">
      <Icon name="logomark" height="1em" width="1em" />
    </a>

    <nav aria-label="primary" class="cluster">
      {navItems.map((link) => <Link href={link.path}>{link.name}</Link>)}
    </nav>
  </div>
</header>
